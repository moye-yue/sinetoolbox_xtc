<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <set>
            <objectAnimator android:duration="160" android:propertyName="scaleX" android:valueTo="0.92" />
            <objectAnimator android:duration="160" android:propertyName="scaleY" android:valueTo="0.92" />
            <objectAnimator android:duration="160" android:propertyName="translationZ" android:valueTo="-4dp" />
        </set>
    </item>
    <item android:state_pressed="false">
        <set>
            <objectAnimator android:duration="160" android:propertyName="scaleX" android:valueTo="1.0" />
            <objectAnimator android:duration="160" android:propertyName="scaleY" android:valueTo="1.0" />
            <objectAnimator android:duration="160" android:propertyName="translationZ" android:valueTo="0dp" />
        </set>
    </item>
</selector>

